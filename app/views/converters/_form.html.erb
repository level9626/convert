<%= form_for(@converter) do |f| %>
  <% if @converter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@converter.errors.count, "error") %> prohibited this converter from being saved:</h2>

      <ul>
      <% @converter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="file-field">
    <%= f.label 'Choose file (only json/xml) :' %>
    <%= f.file_field :file %>
  </div>
  <br>

  <div class="extension-field">
    <%= f.label 'Convert to:' %>
    <%= f.select :extension, options_for_select(Converter::EXTENSION) %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit 'Upload file' %>
  </div>
<% end %>
